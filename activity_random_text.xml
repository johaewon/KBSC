            android:id="@+id/FortuneImage"
            android:layout_width="386dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            android:layout_margin="30px" />


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>







